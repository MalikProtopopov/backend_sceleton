# Application
APP_NAME="Corporate CMS Engine"
APP_VERSION="1.0.0"
ENVIRONMENT=development
DEBUG=true
API_PREFIX=/api/v1

# Server
HOST=0.0.0.0
PORT=8000

# Database
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5433/cms
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20
DATABASE_ECHO=false

# Redis
REDIS_URL=redis://localhost:6379/0

# JWT (CHANGE IN PRODUCTION!)
JWT_SECRET_KEY=change-me-in-production-use-at-least-32-chars-secret
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:8080

# S3 (Selectel)
S3_ENDPOINT_URL=https://s3.storage.selcloud.ru
S3_ACCESS_KEY=
S3_SECRET_KEY=
S3_BUCKET_NAME=cms-assets
S3_REGION=ru-1

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW_SECONDS=60
RATE_LIMIT_LOGIN_REQUESTS=5
RATE_LIMIT_LOGIN_WINDOW_SECONDS=300
RATE_LIMIT_INQUIRY_REQUESTS=3
RATE_LIMIT_INQUIRY_WINDOW_SECONDS=60

# Email
EMAIL_PROVIDER=console
EMAIL_API_KEY=
EMAIL_FROM_ADDRESS=noreply@example.com
EMAIL_FROM_NAME=Corporate CMS

# Telegram
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

