# =============================================================================
# Development Environment Configuration
# =============================================================================
# This file is for local development on localhost
# Copy this to .env and adjust if needed
# =============================================================================

# Application
APP_NAME="Corporate CMS Engine"
APP_VERSION="1.0.0"
ENVIRONMENT=development
DEBUG=true
API_PREFIX=/api/v1

# Server
HOST=0.0.0.0
PORT=8000

# Database (Docker Compose)
DATABASE_URL=postgresql+asyncpg://postgres:postgres@postgres:5432/cms
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20
DATABASE_ECHO=false

# Redis (Docker Compose)
REDIS_URL=redis://redis:6379/0

# JWT
JWT_SECRET_KEY=dev-secret-key-change-in-production-at-least-32-chars
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=60
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS - Allow local frontend development
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:3002,http://localhost:5173,http://localhost:5174,http://localhost:8080

# S3 Storage (MinIO for local development)
# MinIO credentials are auto-configured in development mode
S3_ENDPOINT_URL=http://minio:9000
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_BUCKET_NAME=cms-assets
S3_REGION=us-east-1

# Rate Limiting (relaxed for development)
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_WINDOW_SECONDS=60
RATE_LIMIT_LOGIN_REQUESTS=50
RATE_LIMIT_LOGIN_WINDOW_SECONDS=60
RATE_LIMIT_INQUIRY_REQUESTS=10
RATE_LIMIT_INQUIRY_WINDOW_SECONDS=60

# Email (console output in development)
EMAIL_PROVIDER=console
EMAIL_API_KEY=
EMAIL_FROM_ADDRESS=noreply@localhost
EMAIL_FROM_NAME=Corporate CMS Dev

# Telegram (optional for development)
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# Encryption (generate with: python -c 'from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())')
ENCRYPTION_KEY=

# Public API URL (for webhook URLs)
# For local development with ngrok, use: https://jessie-typal-diedra.ngrok-free.dev
# For production, use your actual domain: https://api.yourdomain.com
PUBLIC_API_URL=https://jessie-typal-diedra.ngrok-free.dev

# Logging
LOG_LEVEL=DEBUG
LOG_FORMAT=console

# Single-tenant mode
SINGLE_TENANT_MODE=true
DEFAULT_TENANT_SLUG=main
DEFAULT_TENANT_NAME=Main Site

